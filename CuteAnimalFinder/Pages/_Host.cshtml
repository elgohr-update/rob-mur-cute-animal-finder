@page "/"
@namespace CuteAnimalFinder.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<component type="typeof(App)" render-mode="Server"/>

<script src="https://kit.fontawesome.com/d2808988f4.js" crossorigin="anonymous"></script>

<script>

let lastScrollTop = 0;

window.onscroll = function (){
    let bar = document.getElementById("navbar");
    let inner = document.getElementById("navbar-inner");
    let y = window.scrollY;
    if (y !== lastScrollTop){
        if (y < lastScrollTop){
          bar.classList.add("scrolled-up");
          bar.classList.remove("scrolled-down");
          inner.classList.add("collapse");
        } else {
          bar.classList.add("scrolled-down");
          bar.classList.remove("scrolled-up");
          inner.classList.add("collapse");
        }
        lastScrollTop = y;
    }
}

function toggleNavBar() {
    let inner = document.getElementById("navbar-inner");
    if (inner.classList.contains("collapse")){
        inner.classList.remove("collapse");    
    } else {
        inner.classList.add("collapse");    
    }
}

</script>

<script>
    function scrollToElement(id){
            let elem = document.getElementById(id);
            let topElem = document.getElementById("end-of-nav-bar");
            document.documentElement.scrollTop = elem.getBoundingClientRect().top - topElem.getBoundingClientRect().bottom;
        }
</script>